<section id="articles">
  <% @sugestoes.each do |sugestao| %>
  <article class="article">
    <div class="title"><%= link_to sugestao.titulo %></div>
    <div class="byline"><%= sugestao.created_at.strftime("%d/%m/%Y %Hh%I") %></div>
  </article>
  <% end %>
  
</section>

