<%= form_for(@sugestao) do |f| %>
  <% if @sugestao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sugestao.errors.count, "error") %> prohibited this sugestao from being saved:</h2>

      <ul>
      <% @sugestao.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% # Title and Teaser can not be changed once an article has been accepted %>
  <% if @sugestao.status < 3 %>
    <div class="field">
        <label for="sugestao_title">Título (Plaintext, 180 characters max)</label><br />
        <%= f.text_field :titulo, :size => "100%", :class => "fullwidth"  %>
    </div>      
  <% else %>
    <div class="field">
        <label for="sugestao_title">Título (não pode ser alterado pois já foi aprovado)</label><br />
        <%= f.text_field :titulo, :readonly => true,  :size => "100%", :class => "fullwidth"  %>
    </div>
  <% end %>

  <div class="field">
    <label for="sugestao_texto">Texto (Textile: RedCloth with Coderay - <%= link_to "What is this?", '#' %>)</label><br />
    <%= f.text_area :texto, :size => "100%x20", :class => "fullwidth"  %>
  </div>

  <div class="actions">
    <%= link_to 'Detalhes desta ideia', @sugestao, :class => "awesome custom black" %> | 
    <%= link_to 'Voltar para as ideias', minhassugestoes_sugestoes_path, :class => "awesome custom black" %>
    <br/>
    <%= f.submit :class => "awesome custom red" %>
  </div>


<% end %>
